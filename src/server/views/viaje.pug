extends ./layouts/index.pug
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="imagen del viaje" , class="img-fluid")
            .col-md-7
                h1= viaje.titulo
                p  
                    i.fas.fa-calendar-alt
                    | Fecha de ida :#{viaje.FechaIda.toString().substr(0,24)} - Fecha de vuelta #{viaje.FechaVuelta.toString().substr(0,24)}
                p 
                    i.fas.fa-dollar-sign
                    | #{viaje.precio} MXN
                p   
                    i.fas.fa-users
                    | #{viaje.disponibles}
                p #{viaje.descripcion}
                            
